<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ixigoandroiddesignsdk" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="font">@font/ixi_sans_medium</item>
        <item name="android:textColor">@color/n800</item>
        <!-- include other attributes you want to change: textColor, textStyle, etc -->
    </style>
    <style name="ToolbarTitleAppearanceWithSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="font">@font/ixi_sans_medium</item>
        <item name="android:textColor">@color/n800</item>
        <!-- include other attributes you want to change: textColor, textStyle, etc -->
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="font">@font/ixi_sans_medium</item>
        <item name="android:textColor">@color/n600</item>
    </style>

    <style name="ToolbarPopupThemeOrange" parent="ThemeOverlay.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="font">@font/ixi_sans_medium</item>
        <item name="android:textColor">@color/o600</item>
        <item name="android:textColorPrimary">@color/o600</item>
        <item name="android:colorControlActivated">@color/o600 </item>
        <item name="android:colorControlHighlight">@color/o600</item>
        <item name="android:colorControlNormal">@color/o600</item>

    </style>

    <style name="OrangeToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/o500</item>
        <item name="actionMenuTextAppearance">@style/ToolBarMenuTextAppearance</item>
    </style>

    <style name="ToolBarMenuTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ixi_sans_bold</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/ixi_font_family</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ChipTextAppearance.Bold" parent="ChipTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipTextAppearance.Italic" parent="ChipTextAppearance">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ChipTextAppearance.Bold.Italic" parent="ChipTextAppearance">
        <item name="android:textStyle">bold|italic</item>
    </style>

<!--    <style name="ChipTextAppearance.Strikethrough" parent="ChipTextAppearance">-->
<!--        <item name="android:textStyle">italic</item>-->
<!--    </style>-->
</resources>