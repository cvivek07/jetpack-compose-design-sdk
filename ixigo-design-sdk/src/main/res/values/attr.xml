<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BaseButton">
        <attr name="android:text" format="string" />
        <attr name="android:drawableEnd" format="reference" />
        <attr name="android:drawableStart" format="reference" />
    </declare-styleable>

    <declare-styleable name="SolidIxigoButton" parent = "IxigoButton"/>
    <declare-styleable name="OutlinedIxigoButton" parent = "IxigoButton"/>


    <declare-styleable name="BaseInputField">
        <attr name="android:text" format="string" />
        <attr name="helperText" format="string" />
        <attr name="actionText" format="string" />
        <attr name="label" format="string" />
        <attr name="maxCharCount" format="string" />
        <attr name="actualCharCounter" format="string" />
        <attr name="android:drawableEnd" format="reference" />
        <attr name="android:drawableStart" format="reference" />
        <attr name="actionImage" format="reference" />
        <attr name="drawableTintColor" format="color" />
    </declare-styleable>

    <declare-styleable name="IxiText">
        <attr name="android:text" format="string" />
        <attr name="android:textColor"  format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="BaseInlineAlert">
        <attr name="android:logo" format="reference" />
        <attr name="heading"  format="string"/>
        <attr name="android:text"  format="string"/>
        <attr name="android:drawableEnd"  format="reference"/>
        <attr name="rightButtonText"  format="string"/>
        <attr name="leftButtonText"  format="string"/>
        <attr name="inlineAlertType"  format="enum">
            <enum name="yellow" value="0"/>
            <enum name="purple" value="1"/>
            <enum name="red" value="2"/>
            <enum name="green" value="3"/>
            <enum name="blue" value="4"/>
            <enum name="neutral" value="5"/>
        </attr>
    </declare-styleable>
</resources>