<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="ixiColor"  format="enum">
        <enum name="warning" value="0"/>
        <enum name="extension" value="1"/>
        <enum name="error" value="2"/>
        <enum name="success" value="3"/>
        <enum name="blue" value="4"/>
        <enum name="neutral" value="5"/>
        <enum name="orange" value="6"/>
    </attr>

    <attr name="rightButtonText"  format="string"/>
    <attr name="leftButtonText"  format="string"/>
    <attr name="buttonColor"  format="reference"/>

    <declare-styleable name="BaseButton">
        <attr name="android:text" format="string" />
        <attr name="android:drawableEnd" format="reference" />
        <attr name="android:drawableStart" format="reference" />
        <attr name="ixiColor"/>
    </declare-styleable>

    <declare-styleable name="BaseTopAppBar">
        <attr name="android:text" format="string" />
        <attr name="android:drawableEnd" format="reference" />
        <attr name="android:drawableStart" format="reference" />
        <attr name="backgroundColor"/>
        <attr name="borderColorUnfocused" format="color" />
        <attr name="borderColorFocused" format="color" />
        <attr name="android:hint" format="string" />
    </declare-styleable>

    <declare-styleable name="SolidIxigoButton" parent="IxigoButton" />
    <declare-styleable name="OutlinedIxigoButton" parent="IxigoButton" />


    <declare-styleable name="BaseInputField">
        <attr name="android:text" format="string" />
        <attr name="helperText" format="string" />
        <attr name="actionText" format="string" />
        <attr name="label" format="string" />
        <attr name="maxCharCount" format="string" />
        <attr name="actualCharCounter" format="string" />
        <attr name="android:drawableEnd" format="reference" />
        <attr name="android:drawableStart" format="reference" />
        <attr name="actionImage" format="reference" />
        <attr name="drawableTintColor" format="color" />
    </declare-styleable>

    <declare-styleable name="IxiText">
        <attr name="android:text" format="string" />
        <attr name="android:textColor"  format="color|reference"/>
        <attr name="android:maxLines" format="integer"/>
        <attr name="ixiTextOverflow" format="enum">
            <enum name="visible" value="0" />
            <enum name="ellipsis" value="1" />
            <enum name="clip" value="2" />
        </attr>
        <attr name="underline" format="boolean" />
        <attr name="strikeThrough" format="boolean" />
        <attr name="italics" format="boolean" />

        <attr name="textDisplayType" format="enum">
            <enum name="display_large" value="0" />
            <enum name="h1" value="1" />
            <enum name="h2" value="2" />
            <enum name="h3" value="3" />
            <enum name="h4" value="4" />
            <enum name="h5" value="5" />
            <enum name="h6" value="6" />
            <enum name="body_large" value="7" />
            <enum name="body_medium" value="8" />
            <enum name="body_small" value="9" />
            <enum name="body_xsmall" value="10" />
        </attr>
        <attr name="textWeight" format="enum">
            <enum name="bold" value="0" />
            <enum name="medium" value="1" />
            <enum name="regular" value="2" />
        </attr>
        <attr name="verticalAlignment" format="enum">
            <enum name="bottom" value="0" />
            <enum name="center_vertically" value="1" />
            <enum name="top" value="2" />
        </attr>
        <attr name="horizontalAlignment" format="enum">
            <enum name="start" value="0" />
            <enum name="center_horizontally" value="1" />
            <enum name="end" value="2" />
        </attr>
        <attr name="ixiTextAlignment" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="center" value="2" />
            <enum name="justify" value="3" />
            <enum name="start" value="4" />
            <enum name="end" value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BaseBottomNavItem">
        <attr name="android:icon" format="reference" />
        <attr name="selectedIcon" format="reference" />
        <attr name="itemLabel" format="string" />
        <attr name="selected" format="boolean" />
    </declare-styleable>

    <declare-styleable name="IxiSeparator">
        <attr name="android:background" format="reference" />
    </declare-styleable>

    <declare-styleable name="BaseChip">
        <attr name="android:text" format="string" />
        <attr name="ixiChipTextAppearance" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="boldItalic" value="3" />
        </attr>
        <attr name="android:checkable" format="boolean" />
        <attr name="closeIcon" format="reference" />
        <attr name="android:enabled" format="boolean" />
        <attr name="chipIcon" format="reference" />
        <attr name="drawableStartSize" format="dimension" />
        <attr name="ixiChipDrawableTintColor" format="reference" />
        <attr name="ixiChipBackgroundColor" format="reference" />
        <attr name="ixiChipUnselectedBackgroundColor" format="reference" />
        <attr name="ixiChipTextColor" format="reference" />
        <attr name="ixiChipUnselectedTextColor" format="reference" />
        <attr name="ixiChipStrokeColor" format="reference" />
        <attr name="ixiChipUnselectedStrokeColor" format="reference" />
        <attr name="ixiChipUnselectedDrawableTintColor" format="reference" />
        <attr name="drawableEndSize" format="dimension" />
        <attr name="size" format="dimension" />
        <attr name="chipType" format="enum">
            <enum name="large" value="0" />
            <enum name="small" value="1" />
            <enum name="xsmall" value="2" />
            <enum name="notification" value="3" />
        </attr>
        <attr name="ixiColor"/>
        <!-- {@deprecated Use ixiColor instead.} -->
        <attr name="chipColor" format="enum">
            <enum name="yellow" value="0" />
            <enum name="purple" value="1" />
            <enum name="red" value="2" />
            <enum name="green" value="3" />
            <enum name="blue" value="4" />
            <enum name="neutral" value="5" />
            <enum name="orange" value="6" />
        </attr>
        <attr name="android:textSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="IxiTabLayout">
        <attr name="tabType" format="enum">
            <enum name="pill" value="0" />
            <enum name="lined" value="1" />
        </attr>
        <attr name="tabPaddingStart" format="dimension" />
        <attr name="tabPaddingEnd" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BaseTabItem">
        <attr name="android:text" format="string" />
        <attr name="android:drawableEnd" format="reference" />
        <attr name="android:drawableStart" format="reference" />
    </declare-styleable>

    <declare-styleable name="BaseInlineAlert">
        <attr name="android:logo" format="reference" />
        <attr name="heading"  format="string"/>
        <attr name="android:text"  format="string"/>
        <attr name="contentAlignment"  format="integer">
            <enum name="textStart" value="0" />
            <enum name="textEnd" value="1" />
            <enum name="center" value="2" />
        </attr>
        <attr name="headingAlignment"  format="integer">
            <enum name="textStart" value="0" />
            <enum name="textEnd" value="1" />
            <enum name="center" value="2" />
        </attr>
        <attr name="actionIcon"  format="reference"/>
        <attr name="buttonColor"/>
        <attr name="ixiColor"/>
        <attr name="rightButtonText"/>
        <attr name="leftButtonText"/>

    </declare-styleable>

    <declare-styleable name="BaseStickyAlert">
        <attr name="android:text"  format="string"/>
        <attr name="arrangement"  format="integer">
            <enum name="normal" value="0" />
            <enum name="spaced" value="1" />
        </attr>
        <attr name="leftIcon"  format="reference"/>
        <attr name="rightIcon"  format="reference"/>
        <attr name="android:elevation"  format="integer"/>
        <attr name="rightButtonText"/>
        <attr name="leftButtonText"/>
        <attr name="ixiColor"/>
        <attr name="buttonColor"/>

    </declare-styleable>

    <declare-styleable name="BaseBottomSheet">
        <attr name="image" format="reference" />
        <attr name="headerText" format="string" />
        <attr name="imageBackgroundColor" format="reference" />
        <attr name="bodyText" format="string" />
        <attr name="toolbarText" format="string" />
    </declare-styleable>
</resources>