<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ButtonsFragment"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".ButtonsFragment">

        <com.ixigo.design.sdk.components.buttons.IxiPrimaryButton
            android:id="@+id/button_first"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_call_24"
            android:drawableEnd="@drawable/ic_call_24"
            android:text="Primary Button"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiPrimaryButton
            android:id="@+id/button_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_call_24" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiPrimaryButton
            android:id="@+id/button_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_call_24" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiPrimaryButton
            android:id="@+id/button_fourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button four" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiPrimaryButton
            android:id="@+id/button_fifth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiOutlinedButton
            android:id="@+id/button_sixth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiOutlinedButton
            android:id="@+id/button_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiOutlinedButton
            android:id="@+id/button_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiOutlinedButton
            android:id="@+id/button_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiSecondaryButton
            android:id="@+id/button_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button 10" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiSecondaryButton
            android:id="@+id/button_twelve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secondary Bottom Error" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiSecondaryButton
            android:id="@+id/button_thirteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sec M Su" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiSecondaryButton
            android:id="@+id/button_fourteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S T Sm W " />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiTertiaryButton
            android:id="@+id/button_eleven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tertiary Large Extension " />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiTertiaryButton
            android:id="@+id/button_fifteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ter Med Su" />

        <include layout="@layout/divider" />

        <com.ixigo.design.sdk.components.buttons.IxiTertiaryButton
            android:id="@+id/button_sixteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ter xx War" />

    </LinearLayout>
</ScrollView>