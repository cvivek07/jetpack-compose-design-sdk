        app:heading="A short heading can be multiple liners"
        android:text="Lorem ipsum dolor sit amet, consectetur"
        app:actionIcon="@drawable/ic_baseline_cancel_24"
        app:rightButtonText="Button"
        app:leftButtonText="Button"
        app:ixiColor="warning"
        />
